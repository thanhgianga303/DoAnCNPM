@page
@model CreateModel
@{
    Layout="~/Pages/Shared/_LayoutAdmin.cshtml";
}
@{
ViewData["Title"] = "Create cấp bậc";
}

<form method="post">
    <div class="form-group">
        <div class="form-row">
            <div class="col-md-3"></div>
            <div class="col-md-6" style="text-align:center">
                <label><h2>Tạo cấp bậc mới</h2></label>
            </div>
            <div class="col-md-3"></div>
        </div>
        <div class="form-row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <label>Nhập ID:</label>
                <input type="number" class="form-control" asp-for="CapBac.CapBacID">
                <span asp-validation-for="CapBac.CapBacID"></span>
            </div>
            <div class="col-md-3"></div>
        </div>
        <div class="form-row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <label>Mã cấp bậc:</label>
                <input type="text" class="form-control" asp-for="CapBac.MaCapBac">
                <span asp-validation-for="CapBac.MaCapBac"></span>
            </div>
            <div class="col-md-3"></div>
        </div>
        <div class="form-row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <label>Tên cấp bậc:</label>
                <input type="text" class="form-control" asp-for="CapBac.TenCapBac">
                <span asp-validation-for="CapBac.TenCapBac"></span>
            </div>
            <div class="col-md-3"></div>
        </div>
        <div class="form-row" style="margin-top:10px">
            <div class="col-md-3"></div>
            <div class="col-md-6" style="text-align:center">
                <input type="submit" class="btn btn-info" value="Thêm"/>
            </div>
            <div class="col-md-3"></div>
        </div>
</div>
</form>