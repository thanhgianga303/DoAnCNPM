@page
@using Microsoft.AspNetCore.Http
@model IndexModel
@{
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}
@{
    var session=@HttpContext.Session.GetString("Role");
    if(session=="1")
    {
        <h1>Bạn không đủ quyền để truy cập</h1>
    }
    else
    {
<h1>Quản lý khu vực</h1>
<form method="get">
                <p>
                    Lựa chọn: 
                    <select asp-for="Genre">
                        <option value="All">Tất cả</option>
                        <option value="MaKhuVuc">Mã khu vực</option>
                        <option value="TenKhuVuc">Tên khu vực</option>
                        <option value="KhuVucID">Khu vực ID</option>   
                    </select>
                    Nhập thông tin: 
                    <input type="text"  asp-for="SearchString"/>
                    <input type="submit" value="Filter"/>
                </p>
</form>
<form method="get">
    <div class="vipham">
        <div class="form-row" style="padding:10px">
            <div class="col-md-3">
            </div>
            <div class="col-md-6" style="text-align:center">
                <a asp-page="Create" class="btn btn-info" style="color:black" >Tạo mới</a>
            </div>
            <div class="col-md-3"></div>
    </div>
    <table class="table-header">
        <tr>
            <!-- Theo độ rộng của table content -->
            <th style="width: 15%">ID khu vực<i class="fa"></i></th>
            <th style="width: 35%">Mã khu vực<i class="fa"></i></th>
            <th style="width: 35%">Tên khu vực<i class="fa"></i></th>
            <th style="width: 15%">Thao Tác</th>
        </tr>
    </table>
    <div class="table-content">
        <table class="table-outline">
            @foreach (var khuvuc in Model.KhuVucVM.DanhSachKhuVuc)
            {
            <tr>
            <td style="width: 15%">@khuvuc.KhuVucID<i class="fa"></i></td>
            <td style="width: 35%">@khuvuc.MaKhuVuc<i class="fa"></i></td>
            <td style="width: 35%">@khuvuc.TenKhuVuc<i class="fa"></i></td>
            <td style="width: 15%">
                <a asp-page="Delete" class="btn btn-info" asp-route-id="@khuvuc.KhuVucID">Delete</a>
                <a asp-page="Edit" class="btn btn-info" asp-route-id="@khuvuc.KhuVucID">Edit</a>
            </td>
            </tr>
            }
        </table>
        @{
    var preDisabled = !Model.KhuVucVM.DanhSachKhuVuc.HasPrevious ? "disabled" : "";
    var nextDisabled = !Model.KhuVucVM.DanhSachKhuVuc.HasNext ? "disabled" : "";
}
<div class="container">
    <a  asp-page="Index" 
        asp-route-pageIndex="@(Model.KhuVucVM.DanhSachKhuVuc.PageIndex - 1)" 
        asp-route-searchString="@Model.SearchString"
        asp-route-genre="@Model.Genre"
        class="btn btn-default @preDisabled">Trước</a>
    @for(int i=1;i<=@Model.KhuVucVM.DanhSachKhuVuc.TotalPages;i++)
    {
        <a  asp-page="Index" 
        asp-route-pageIndex="@i"
        asp-route-searchString="@Model.SearchString"
        asp-route-genre="@Model.Genre" 
        class="btn btn-default">@i</a>
    }
    <a  asp-page="Index" 
        asp-route-pageIndex="@(Model.KhuVucVM.DanhSachKhuVuc.PageIndex + 1)" 
        asp-route-searchString="@Model.SearchString"
        asp-route-genre="@Model.Genre"
        class="btn btn-default @nextDisabled">Sau</a>
</div>
        </div>
        </div>
 </form>
    }
    }


        