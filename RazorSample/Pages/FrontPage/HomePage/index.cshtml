@page
@model IndexModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<section id="banner">
<div class="inner">
    <header>
        <h2>Tìm kiếm biên bản VPGT</h2>
    </header>
<form method="get"> 
    <div class="form-group" style="text-align:center" size="100px">
        <label for="sel1">Loại phương tiện:</label><br>
        <select class="form-control" asp-for="Genre" id="sel1">
            <option value="SL" selected="true">Lựa chọn:</option>
            <option value="XM">Xe máy</option>
            <option value="OT"> Xe ô tô</option>
        </select>
    </div>
    <div class="form-group" style="margin-top:20px">
        <label for="sel1">Biển kiểm soát: </label><br>
        <input type="text" asp-for="SearchString" placeholder="VD:86AA-01432"/>
    </div>
    <footer>
        <ul class="buttons stacked">
            <input type="submit" value="Tìm kiếm"/>
        </ul>
    </footer>
</form>
</div> <!-- Đóng div bên kia -->	
				</section>

			<!-- Main -->
				<article id="main">

					<header class="special container">
						<span class="icon solid fa-chart-bar"></span>
						<h2>Thông tin vi phạm</h2>
                    
<table class="table table-striped">
        <tr>
            <!-- Theo độ rộng của table content -->
            <th style="width: 10%;font-weight:500">Mã biên bản<i class="fa"></i></th>
            <th style="width: 10%;font-weight:500">Tên người vi phạm<i class="fa"></i></th>
            <th style="width: 10%;font-weight:500">CMND</th>
            <th style="width: 10%;font-weight:500">Ngày sinh<i class="fa"></i></th>
            <th style="width: 10%;font-weight:500">Địa chỉ<i class="fa"></i></th>
            <th style="width: 10%;font-weight:500">Tên cán bộ lập biên bản <i class="fa"></i></th>
            <th style="width: 10%;font-weight:500">Cấp bậc<i class="fa"></i></th>
            <th style="width: 10%;font-weight:500">Ngày lập<i class="fa"></i></th>
            <th style="width: 10%;font-weight:500">Tiền phạt<i class="fa"></i></th>
            <th style="width: 10%;font-weight:500">Thao tác<i class="fa"></i></th>
        </tr>
    </table>
    <div >
        <table>
            @foreach (var bienban in Model.BienBanVM.DanhSachBienBan)
            {
            <tr>
            <td style="width: 10%">@bienban.MaBienBan<i class="fa"></i></td>
            <td style="width: 10%">@bienban.NguoiDieuKhien.Ten<i class="fa"></i></td>
            <td style="width: 10%">@bienban.NguoiDieuKhien.Cmnd<i class="fa"></i></td>
            <td style="width: 10%">@bienban.NguoiDieuKhien.NgaySinh<i class="fa"></i></td>
            <td style="width: 10%">@bienban.NguoiDieuKhien.DiaChi<i class="fa"></i></td>
            <td style="width: 10%">@bienban.CanBo.Ten<i class="fa"></i></td>
            <td style="width: 10%">@if(@bienban.CanBo.CapBacID==2){
                    <p>Trung tá</p>
                }
                else
                if(@bienban.CanBo.CapBacID==1)
                {
                    <p>Thiếu tá</p>
                }
                else
                if(@bienban.CanBo.CapBacID==3)
                {
                    <p>Đại tá</p>
                }
                else
                if(@bienban.CanBo.CapBacID==4)
                {
                    <p>Thượng tá</p>
                }
                <i class="fa"></i></td>
            <td style="width: 10%">@bienban.ThoiGian<i class="fa"></i></td>
            <td style="width: 10%">@bienban.TienPhat<i class="fa"></i></td>
            <td style="width: 10%">
                <a asp-page="DSChiTietBienBan/Index" class="btn btn-info" asp-route-id="@bienban.BienBanID">Chi tiết</a><i class="fa"></i></td>
            </tr>
            }
        </table>
	</header>
</article>